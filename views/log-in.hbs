<div class="container">

    <div class="card">
        <h1>Log In</h1>

        <form action="/auth/log-in" method='POST'>
            <input type="text" name='username' required='true' placeholder="Username">
            <br>
            <input type="password" name='password' required='true' placeholder="Password">
            <br>
            <br>
            <button type='submit'>Log In</button>
            <br>
            <br>
            <br>
            <br> {{#if error}}
            <p>ERROR: {{error}}</p>
            {{/if}}
        </form>

        <p>For new admins:</p> <a href="/">Sign Up</a>

    </div>
</div>